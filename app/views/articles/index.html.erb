   </li>
   <% @articles.each do |article| %>
      <!-- <% if article.view_count == nil %>
      <% article.view_count = 0 %>
      <% end %> -->
     <li>
       <%= link_to article.title, article_path(article), class: 'article_title', id: "article_#{article.id}" %>
       <!-- Views (<%= article.view_count %>) -->
     </li>
   <% end %>
</ul>

